                <meta name="viewport" content="width=device-width, initial-scale=1.0">
                <meta name="description" content="">
                <meta name="author" content="">
                <meta charset="utf-8">
            {% endblock %}
        {% endblock %}
    </head>
    <body {% block landing%}{% endblock %}>
