{% extends 'base.html.twig' %}

{% block content %}


<div class="content container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="page-title">Reportes de <strong>Copropietarios por Propiedad</strong></h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <section class="widget">
                <header>
                </header>
                <div class="body">
                    <form class="form-horizontal" action="reporteCopPro.php" method="POST">
                        <fieldset>
                        <div class="control-group">
	                        <label class="control-label" for="default-select">Seleccione el conjunto </label>
	                        <div class="controls form-group">
	                            <select name="conjunto"
	                                    class="chzn-select select-block-level" id="default-select">
	                                {% for conjuntoAdm in conjuntoAdm %}
					                    <option value={{conjuntoAdm['con_id']}}>{{conjuntoAdm['con_nombre']}}</option>
						            {% endfor %}	                          	
	                            </select>
						    	<button type="submit" name="subit" class="btn btn-primary" value="Aceptar" >Ver</button>
	                        </div>
	                    </div>
                        </fieldset>
                    </form>

                    <table class="table table-striped table-images">
				        <thead>
				        <tr>
				            <th>Rut</th>
				            <th>Nombre</th>
				            <th>Propiedad</th>
				            <th>Tipo</th>
				            <th>Estado</th>
				        </tr>
				        </thead>
				        <tbody>
							{% for dato in reporte %}
						        <tr>
						            <td>
						            	{{dato['cop_run']}}
						            </td>
						            <td>
						                {{dato['cop_nombres']}} {{dato['cop_ap_paterno']}} {{dato['cop_ap_materno']}}
						            </td>
						            <td>
						                {{dato['pro_numero']}}
						            </td>
						            <td>
						                {{dato['tcop_nombre']}}
						            </td>
						            <td>
						            	{{dato['eco_descripcion']}}
						            </td>
						        </tr>
							{% endfor %}
						</tbody>
					</table>
                </div>
            </section>
        </div>
    </div>
</div>


	

{% endblock content %}