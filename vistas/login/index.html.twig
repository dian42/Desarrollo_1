{% extends "base.html.twig" %}
{% block init %}
    {{ parent() }}
    <script src="lib/jquery/jquery-2.0.3.min.js"> </script>
	<script src="lib/jquery-pjax/jquery.pjax.js"></script>
    <script src="lib/backbone/underscore-min.js"></script>
    <script src="js/settings.js"> </script>
{% endblock %}
{% block title %}Login{% endblock %} 
{% block content %}
	<div class="single-widget-container">
	    <section class="widget login-widget">
	        <header class="text-align-center">
	            <h4>Ingresa a tu cuenta</h4>
	        </header>
	        <div class="body">
	            <form class="no-margin"
	                  action="login.php" method="POST">
	                <fieldset>
	                    <div class="form-group no-margin">
	                        <label for="text" >Usuario</label>

	                        <div class="input-group input-group-lg">
	                                <span class="input-group-addon">
	                                    <i class="eicon-user"></i>
	                                </span>
	                            <input id="text" type="text" name="user" class="form-control input-lg"
	                                   placeholder="Usuario" required pattern="[0-9]+" maxlength="8" required="true" autofocus >
	                        </div>
       
	                    </div>

	                    <div class="form-group">
	                        <label for="password" >Contraseña</label>

	                        <div class="input-group input-group-lg">
	                                <span class="input-group-addon">
	                                    <i class="fa fa-lock"></i>
	                                </span>
	                            <input id="password" type="password" name="pass" class="form-control input-lg"
	                                   placeholder="Contraseña" required maxlength="10" required="true" >
	                        </div>

	                    </div>
	                </fieldset>
	                <div class="form-actions">
	                    <button type="submit" class="btn btn-block btn-lg btn-danger">
	                        <span class="small-circle"><i class="fa fa-caret-right"></i></span>
	                        <small>Ingresar</small>
	                    </button>
	                    <!--
	                    <div class="forgot"><a class="forgot" href="login.html#">Forgot Username or Password?</a></div>
	                </div> -->
	            </form>
	        </div><!--
	        <footer>
	            <div class="facebook-login">
	                <a href="index.html"><span><i class="fa fa-facebook-square fa-lg"></i> LogIn with Facebook</span></a>
	            </div>
	        </footer> -->
	    </section>
	</div>
{% endblock %}
            {% block footer %}
            {% endblock %}
